#:kivy 1.10.0

<TopicListScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 10, 10, 10]
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  # Light background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Available Topics'
            font_size: 24
            size_hint_y: 0.1
            color: 0.2, 0.2, 0.2, 1

        RecycleView:
            id: rv
            viewclass: 'SelectableButton'
            bar_width: 10
            scroll_type: ['bars', 'content']
            RecycleBoxLayout:
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(10)
                padding: [5, 0, 5, 0]

<SelectableButton>:
    background_normal: ''
    background_down: ''
    background_color: 0, 0, 0, 0  # Transparent to let canvas handle background
    color: (0.1, 0.1, 0.1, 1)
    size_hint_x: 0.95
    pos_hint: {"center_x": 0.5}
    canvas.before:
        Color:
            rgba: (0.8, 0.87, 1, 1) if self.hovered else (1, 1, 1, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12,]

<TopicDetailScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 10, 10, 10]
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: label
            text: ''
            font_size: 18
            color: 0.1, 0.1, 0.1, 1
            size_hint_y: 0.9

        HoverableButton:
            text: "Back"
            size_hint_y: 0.1
            background_normal: ''
            background_down: ''
            background_color: 0, 0, 0, 0
            color: 0.1, 0.1, 0.1, 1
            canvas.before:
                Color:
                    rgba: (0.8, 0.87, 1, 1) if self.hovered else (1, 1, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [12,]
            on_press: root.go_back()